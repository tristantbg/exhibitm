#mobile-selector
	width 100%
	text-align center
	padding 11rem
	position absolute
	+above($md + 1)
		display none
	h2
		position relative
		display inline-block
		&::after
			content ''
			position absolute
			width calc(100% + .2em)
			height 1px
			background $secondary
			bottom .15em
			left -.1em
			z-index -1

#selectorSubmit
	cursor pointer

#mainSelector
	position relative
	text-align center
	height 100vh
	#selectorTitle, #selectorSubmit, #selectorHelp
		position absolute
		width 100%
		left 0
	#selectorTitle
		top 20%
		+below($md)
			top 11rem
	#themeSelector
		+below($md)
			align(vertical)
			transform(translateY(-130%))
	#mediaSelector
		+below($md)
			align(vertical)
	#authorSelector
		+below($md)
			align(vertical)
			transform(translateY(40%))
	#selectorSubmit
		bottom 20%
		+below($md)
			bottom 11rem
	#selectorHelp
		bottom ($padding + 1)
	.groupSelector
		span(1/3)
		+above($md + 1)
			height 50vh
			margin-top 25vh
			overflow hidden
		+below($md)
			span(1)
		ul.selector
			padding .5em 0
			position relative
			z-index 100

#smallSelector
	span(1)
	padding ($padding/2) 0
	overflow hidden
	+below($md)
		display none
	#selectorTitle, #selectorSubmit
		span(1/8)
		position relative
		z-index 10
	.groupSelector
		span(1/4)
		ul.selector
			padding-bottom .5em

#mainSelector, #smallSelector
	.groupSelector
		text-align center
		+above($md + 1)
			flexbox()
			justify-content center
			align-items center
			flex-direction column
		ul.selector
			position relative
			z-index 100
			li
				//transition(color 200ms ease)
				cursor pointer
				+below($md)
					display inline-block
					width 100%
					height 2em
				span
					position relative
					display inline-block
					&::after
						content ''
						position absolute
						width calc(100% + .2em)
						height 0
						background $secondary
						bottom .15em
						left -.1em
						z-index -1
				&:not(.is-selected)
					+above($md + 1)
						display none
				&.is-selected span::after
					height 1px
					+below($md)
						height 0
				&.highlight
					span
						color $primary
						//background-color $secondary
					span::after
						// transition(transform 200ms $kinetic)
						// transition-delay(100ms)
						height 100%
				&:hover:not(.is-selected)
					span
						+above($md + 1)
							color $primary
							//background-color $secondary
					span::after
						+above($md + 1)
							// transition(transform 200ms $kinetic)
							// transition-delay(100ms)
							height 100%
				&.is-selected:not([default])::after
					//transform(scaleY(1))
				
		ul.selector.is-selecting
			cursor url('../../images/close-b.png') 8 8, default
			li
				cursor url('../../images/close-b.png') 8 8, default
		ul.selector:not(.is-selecting):hover
			li[default]
				+above($md + 1)
					display none
			li
				display block
	#selectorSubmit
		h2
			display inline-block
			position relative
			&::after
				content ''
				position absolute
				width calc(100% + .2em)
				height 1px
				background $secondary
				bottom .15em
				left -.1em
				z-index -1
				transform-origin bottom
				+below($md)
					height 0
			&:hover
				+above($md + 1)
					color $primary
				&::after
					+above($md + 1)
						height 100%
			&.is-selected
				color $primary
				&::after
					height 100%
			&.disabled
				opacity 0.2

.flickity-viewport
	height 2.4em

.flickity-slider
	li
		padding .1em .8em 0
		span
			align(vertical)

.flickity-prev-next-button, .flickity-prev-next-button:hover
	background transparent
	width 30px
	svg
		width 100%
		left 0
		top 0
		height 100%

.flickity-prev-next-button.previous
	left 0

.flickity-prev-next-button.next
	right 0

.flickity-prev-next-button .arrow
	fill $secondary

.dark .flickity-prev-next-button .arrow
	fill $primary