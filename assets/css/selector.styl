#selectorSubmit
	cursor pointer

#mainSelector
	position relative
	text-align center
	height 100vh
	#selectorTitle, #selectorSubmit, #selectorHelp
		position absolute
		width 100%
		left 0
	#selectorTitle
		top 20%
	#selectorSubmit
		bottom 20%
	#selectorHelp
		bottom $padding
	.groupSelector
		span(1/3)
		height 100vh
		ul
			position relative
			z-index 100

#smallSelector
	padding ($padding/2) 0
	#selectorTitle, #selectorSubmit
		span(1/8)
		position relative
		z-index 10
	.groupSelector
		span(1/4)

#mainSelector, #smallSelector
	.groupSelector
		text-align center
		flexbox()
		justify-content center
		align-items center
		flex-direction column
		ul.selector
			position relative
			z-index 100
			li
				cursor pointer
				position relative
				display inline-block
				&::after
					content ''
					position absolute
					width calc(100% + .2em)
					height 100%
					background $secondary
					top -.15em
					left -.1em
					z-index -1
					transform-origin bottom
					transform(scaleY(0))
				span
					position relative
				span.mask
					position absolute
					left 0
					bottom 0
					color $primary
					transform(scaleY(0))
					transform-origin center
					&::after
						content ''
						position absolute
						width calc(100% + .2em)
						height 100%
						background $secondary
						top -.15em
						left -.1em
						z-index -1
						transform-origin bottom
						//transform(scaleY(0))
				&:not(.selected)
					display none
				&.selected
					&::after
						transform(scaleY(0.05))
				&:hover:not(.selected)
					span.mask
						//transition(transform 100ms $kinetic)
						//transition-delay(100ms)
						transform(scaleY(1))
					span.mask::after
						transition(transform 200ms $kinetic)
						transition-delay(100ms)
						//transform(scaleY(1))
				&.selected:not([default])::after
					//transform(scaleY(1))
					height 1.15em
				
		ul.selector.is-selecting
			cursor url('../../images/close-b.png') 8 8, default
			li
				cursor url('../../images/close-b.png') 8 8, default
		ul.selector:not(.is-selecting):hover
			li[default]
				display none
			li
				display block